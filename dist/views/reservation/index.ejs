<% layout('layouts/boilerplate') %>
    <section>
        <div class="container">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Check-in</th>
                        <th scope="col">Check-out</th>
                        <th scope="col">Visitors</th>
                        <th scope="col">Type</th>
                        <th scope="col">Room</th>
                        <th scope="col">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( const reservation of reservations ) { %>
                        <tr>
                            <td>
                                <a href="/reservation/<%= reservation.reservationId %>">
                                    <%= reservation.Guest.name %>
                                </a>
                            </td>
                            <td>
                                <%= reservation.checkIn.toISOString().slice(0, 10) %>
                            </td>
                            <td>
                                <%= reservation.checkOut.toISOString().slice(0, 10) %>
                            </td>
                            <td>
                                <%= reservation.visitors %>
                            </td>
                            <td>
                                <%= reservation.type %>
                            </td>
                            <td>
                                <%= reservation.Room.roomId %>
                            </td>
                            <td>
                                <a href="/reservation/edit/<%= reservation.reservationId %>"><i
                                        class="bi bi-pencil-square"></i></a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <a href="/reservation/new" class="btn btn-dark" role="button">Add Reservation</a>
    </section>