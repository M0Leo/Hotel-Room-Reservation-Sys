<% layout('layouts/boilerplate') %>
    <section>
        <div class="container">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Username</th>
                        <th scope="col">Role</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( const user of users ) { %>
                        <tr>
                            <td>
                                <%= user.username %>
                            </td>

                            <td>
                                <%= user.role %>
                            </td>
                        </tr>
                        <% } %>

                </tbody>
            </table>
        </div>
    </section>