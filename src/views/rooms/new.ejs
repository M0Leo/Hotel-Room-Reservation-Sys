<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Room</h1>
    <div class="col-6 offset-3">
        <form action="/room" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="id">room id</label>
                <input class="form-control" type="number" id="id" name="roomId" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="type">Type</label>
                <select class="form-control" type="text" id="type" name="type" required>
                    <option value="" selected disabled>--Please select room type--</option>
                    <option value="Single">Single</option>
                    <option value="Double">Double</option>
                    <option value="Triple">Triple</option>
                </select>
            </div>
            <div class="mb-3">
                <button class="btn btn-dark" type="submit">Add</button>
            </div>
        </form>
        <a href="/room" class="btn btn-dark" role="button">All rooms</a>
    </div>
</div>